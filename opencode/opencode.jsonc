{
  "$schema": "https://opencode.ai/config.json",
  "theme": "monokai",
  "permission": {
    "read": {
      "*": "allow",
      // Disable reading env files
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "edit": {
      "*": "allow",
      // Prevent editing of config files
      "*opencode.json*": "deny",
      "*package.json": "ask",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "bash": {
      "*": "ask",
      "git status*": "allow",
      "git show*": "allow",
      "git log*": "allow",
      "git diff*": "allow",
      "cat*": "allow",
      "find*": "allow",
      "fd*": "allow",
      "grep*": "allow",
      "rg*": "allow",
      "ls*": "allow",
      "eza*": "allow",
      "head*": "allow",
      "tail*": "allow",
      "xargs*": "allow",
      "wc*": "allow",
      "npx eslint*": "allow",
      "npx tsc*": "allow",
      "npx prettier*": "allow",
    },
    "webfetch": "ask",
    "external_directory": "ask",
    "doom_loop": "ask"
  },
  "keybinds": {
    "leader": "ctrl+x",
    "messages_page_up": "ctrl+shift+u",
    "messages_page_down": "ctrl+shift+d",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "agent": {
    "explore": {
      "model": "github-copilot/gpt-5-mini"
    },
    "general": {
      "model": "github-copilot/gpt-5-mini"
    },
    "title": {
      "model": "github-copilot/gpt-5-mini"
    },
    "summary": {
      "model": "github-copilot/gpt-5-mini"
    },
    "compaction": {
      "model": "github-copilot/gpt-5-mini"
    }
  }
}
